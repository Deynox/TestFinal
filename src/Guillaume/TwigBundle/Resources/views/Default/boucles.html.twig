{% extends "GuillaumeRacineBundle::layout.html.twig" %}
{% block inmenu %}
    <ul class="nav navbar-nav">
    <li><a href="{{path("guillaume_racine_homepage")}}">Home</a></li>
    <li class="active"><a href="{{path("guillaume_twig_homepage")}}">Vers Twig</a></li>
    <li><a href="">Vers Crud</a></li>
</ul>
{% endblock %}
{% block sousmenu %}{% include "GuillaumeTwigBundle:Default:menu.html.twig" %}{% endblock %}
{% block incorps %}
    <h1>Boucles Twig</h1>
     <br/><br/>
    <h3>Comment écrire rapidement les nombres de 1 à 10 ?</h3>
        {% raw %}
            {% for i in 0..10%}<br/>
                {{i}}  <br/>
            {% endfor %}<br/>
        {% endraw %}
        <br/>
    <h3>Résultat :</h3>
        {% for i in 0..10%}
            {{i}} 
        {% endfor %}
        <br/><br/>
    <h3>Comment écrire rapidement les lettre de A à Z ?</h3>
        {% raw %}
            {% for i in 'a'..'z' %}<br/>
                {{i}}  <br/>
            {% endfor %}<br/>
        {% endraw %}
        <br/>
    <h3>Résultat :</h3>
        {% for i in 'a'..'z'%}
            {{i}} 
        {% endfor %}
        <br/><br/>
    <h3>Comment écrire les lettres en majuscules et minuscule.</h3>
        {% raw %}
            {% for i in 'a'..'z'  %}<br/>
                {{i}}  <br/>
            {% endfor %}<br/>
        {% endraw %}
        <br/>
    <h3>Résultat :</h3>
        {% for i in 'a'|upper..'z'|lower %}
            {{i}} 
        {% endfor %}
{%endblock %}