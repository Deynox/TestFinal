{% extends "GuillaumeRacineBundle::layout.html.twig" %}
{% block inmenu %}
    <ul class="nav navbar-nav">
    <li><a href="{{path("guillaume_racine_homepage")}}">Home</a></li>
    <li><a href="{{path("guillaume_twig_homepage")}}">Vers Twig</a></li>
    <li class="active"><a href="{{path("guillaume_crud_homepage")}}">Vers Crud</a></li>
</ul>
{% endblock %}
{% block incorps %}
     <h1>Liste des articles</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Texte</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('CRUD_article_show', { 'id': article.id }) }}">{{ article.id }}</a></td>
                <td>{{ article.title }}</td>
                <td>{{ article.texte }}</td>
                <td>{% if article.date %}{{ article.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('CRUD_article_show', { 'id': article.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('CRUD_article_edit', { 'id': article.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('CRUD_article_new') }}">Create a new article</a>
        </li>
    </ul>
{%endblock %}
