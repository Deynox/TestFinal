{% extends 'GuillaumeRacineBundle::layout.html.twig' %}
{% block inmenu %}
    <ul class="nav navbar-nav">
    <li><a href="{{path("guillaume_racine_homepage")}}">Home</a></li>
    <li><a href="{{path("guillaume_twig_homepage")}}">Vers Twig</a></li>
    <li class="active"><a href="{{path("guillaume_crud_homepage")}}">Vers Crud</a></li>
</ul>
{% endblock %}
{% block incorps %}
    <h1>Article</h1>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ article.texte }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if article.date %}{{ article.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('CRUD_article_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('CRUD_article_edit', { 'id': article.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{%endblock %}
